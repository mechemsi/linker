{
    "name": "valid-with-channel-options",
    "messageTemplate": "Deployed {app} v{version} to {environment}",
    "parameters": [
        {
            "name": "app",
            "required": true,
            "type": "string",
            "default": null
        },
        {
            "name": "version",
            "required": true,
            "type": "string",
            "default": null
        },
        {
            "name": "environment",
            "required": false,
            "type": "string",
            "default": "production"
        }
    ],
    "channels": [
        {
            "transport": "discord",
            "options": []
        },
        {
            "transport": "sms",
            "options": {
                "to": "+1234567890"
            }
        },
        {
            "transport": "email",
            "options": {
                "to": "team@example.com",
                "subject": "Deployment: {app} v{version}"
            }
        }
    ]
}
